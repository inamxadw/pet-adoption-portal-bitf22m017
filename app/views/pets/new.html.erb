<div class="max-w-3xl mx-auto">
  <div class="md:flex md:items-center md:justify-between md:space-x-4 xl:border-b xl:pb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Post a Pet for Adoption</h1>
      <p class="mt-2 text-sm text-gray-700">
        Please provide accurate information about your pet to help potential adopters make informed decisions.
      </p>
    </div>
  </div>

  <div class="mt-6">
    <%= render "form", pet: @pet %>
  </div>

  <div class="mt-6">
    <%= link_to "Back to Pets", pets_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
</div> 