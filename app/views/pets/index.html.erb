<div class="max-w-7xl mx-auto">
  <div class="md:flex md:items-center md:justify-between md:space-x-4 xl:border-b xl:pb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Available Pets</h1>
      <p class="mt-2 text-sm text-gray-700">
        Find your perfect companion from our list of pets available for adoption.
      </p>
    </div>
    <% if user_signed_in? %>
      <div class="mt-4 flex md:mt-0">
        <%= link_to new_pet_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Post a Pet
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= form_tag pets_path, method: :get, class: "space-y-4 sm:flex sm:space-x-4 sm:space-y-0" do %>
      <div class="flex-1 min-w-0">
        <%= select_tag :species,
            options_for_select(Pet.common_species, params[:species]),
            prompt: "Filter by species",
            class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
      </div>

      <div class="flex-1 min-w-0">
        <%= select_tag :breed,
            options_for_select(@breeds, params[:breed]),
            prompt: "Filter by breed",
            class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
      </div>

      <div class="flex space-x-2">
        <div class="flex-1 min-w-0">
          <%= number_field_tag :min_age,
              params[:min_age],
              placeholder: "Min age",
              min: 0,
              class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
        </div>
        <div class="flex-1 min-w-0">
          <%= number_field_tag :max_age,
              params[:max_age],
              placeholder: "Max age",
              min: 0,
              class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
        </div>
      </div>

      <div class="flex-none">
        <%= submit_tag "Apply Filters",
            class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto" %>
        
        <% if params[:species].present? || params[:breed].present? || params[:min_age].present? || params[:max_age].present? %>
          <%= link_to "Clear Filters", pets_path,
              class: "mt-2 w-full inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto sm:mt-0 sm:ml-2" %>
        <% end %>
      </div>
    <% end %>

    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @pets.each do |pet| %>
        <div class="relative flex flex-col bg-white rounded-lg shadow overflow-hidden">
          <div class="flex-shrink-0">
            <% if pet.image.attached? %>
              <%= image_tag pet.image, class: "h-48 w-full object-cover" %>
            <% else %>
              <div class="h-48 w-full bg-gray-200 flex items-center justify-center">
                <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>
          </div>
          <div class="flex-1 p-6 flex flex-col justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3">
                <h3 class="text-sm font-medium text-gray-900">
                  <%= link_to pet.name, pet_path(pet), class: "hover:underline" %>
                </h3>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                  <%= case pet.status
                      when 'available'
                        'bg-green-100 text-green-800'
                      when 'pending'
                        'bg-yellow-100 text-yellow-800'
                      when 'adopted'
                        'bg-blue-100 text-blue-800'
                      end %>">
                  <%= pet.status.capitalize %>
                </span>
              </div>
              <p class="mt-1 text-xs text-gray-500"><%= pet.species %> • <%= pet.breed %> • <%= pluralize(pet.age, 'year') %> old</p>
              <p class="mt-3 text-sm text-gray-500"><%= truncate(pet.description, length: 100) %></p>
            </div>
            <div class="mt-6 flex items-center">
              <div class="flex-shrink-0">
                <span class="text-sm font-medium text-gray-900">Posted by <%= pet.owner.name %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @pets.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No pets found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by posting a pet for adoption.</p>
        <div class="mt-6">
          <%= link_to new_pet_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Post a Pet
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="mt-8 flex justify-center">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</div> 