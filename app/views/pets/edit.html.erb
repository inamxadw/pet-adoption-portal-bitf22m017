<div class="max-w-3xl mx-auto">
  <div class="md:flex md:items-center md:justify-between md:space-x-4 xl:border-b xl:pb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Edit Pet Listing</h1>
      <p class="mt-2 text-sm text-gray-700">
        Update your pet's information to ensure it's accurate and up-to-date.
      </p>
    </div>
  </div>

  <div class="mt-6">
    <%= render "form", pet: @pet %>
  </div>

  <div class="mt-6 flex items-center justify-between">
    <%= link_to "Back to Pet", @pet, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    <%= button_to "Delete Listing", @pet, method: :delete, 
        data: { confirm: "Are you sure you want to remove this pet listing?" },
        class: "text-sm font-medium text-red-600 hover:text-red-500" %>
  </div>
</div> 